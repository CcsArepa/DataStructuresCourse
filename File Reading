#include <stdio.h>
#include <stdlib.h>

// Juan Diego Acosta Ojeda
// ID: 185015 

// Función que calcula el total de ventas
float totalSale(float sales[], int n) {
    float total = 0.0;
    for (int i = 0; i < n; i++) {
        total += sales[i];
    }
    return total;
}

// Función que calcula la venta máxima
float maxSale(float sales[], int n) {
    float max = sales[0];
    for (int i = 1; i < n; i++) {
        if (sales[i] > max) {
            max = sales[i];
        }
    }
    return max;
}

int main() {
    FILE *fp;
    int count = 0;
    float value;

    // Abrir archivo en modo lectura
    fp = fopen("sales.txt", "r");
    if (fp == NULL) {
        perror("Error al abrir el archivo");
        return 1;
    }

    // Contar el número de líneas (ventas)
    while (fscanf(fp, "%f", &value) == 1) {
        count++;
    }

    // Regresar al inicio del archivo
    rewind(fp);

    // Reservar memoria dinámica para las ventas
    float *sales = (float *)malloc(count * sizeof(float));
    if (sales == NULL) {
        perror("Error al asignar memoria");
        fclose(fp);
        return 1;
    }

    // Leer las ventas
    for (int i = 0; i < count; i++) {
        fscanf(fp, "%f", &sales[i]);
    }

    float total = totalSale(sales, count);
    float max = maxSale(sales, count);

    printf("Total sales: %.2f\n", total);
    printf("Maximum sale: %.2f\n", max);

    fclose(fp);

    return 0;
}
